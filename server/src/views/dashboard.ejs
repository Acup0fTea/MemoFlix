<!DOCTYPE html>
<html>
<head>
  <title>Netflix Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Netflix Dashboard</h1>

    <!-- Reviews Section -->
    <div class="row">
      <div class="col">
        <h2>Reviews</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Movie</th>
              <th>Rating</th>
              <th>Review</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% reviews.forEach((review) => { %>
              <tr>
                <td><%= review.movie %></td>
                <td><%= review.rating %></td>
                <td><%= review.review %></td>
                <td>
                  <form action="/api/v1/reviews/<%= review._id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Users Section -->
    <div class="row">
      <div class="col">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user) => { %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <form action="/api/v1/users/<%= user._id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
